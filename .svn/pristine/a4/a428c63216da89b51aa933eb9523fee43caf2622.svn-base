          <img :src="its.avatar" alt="">
          <div class="user-info">
            <p class="users">
              <span class="user-name">{{its.userName}}</span>
              <span class="user-more" @click="gotoUser(its.accountId)">了解更多</span>
            </p>
            <p class="user-introduce">{{its.introduction}}</p>
