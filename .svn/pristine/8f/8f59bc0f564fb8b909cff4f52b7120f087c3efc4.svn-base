<script>
export default {
  components: {},
  data() {
    return {
      hotnewsTitleList: ['新闻热点', '建筑前沿', '资质热点'],
      newActiveIndex: 0,
      newGoodLessonsFrist: {
        image: '',
        name: '',
        courseDescription: '',
        realName: '',
        price: ''
      },
      headLinesList: {
        0: [],
        1: [],
        2: []
      },
      newsList: {
        0: {},
        1: {},
        2: {}
      },
      newGoodLessons: []
    }
  },

  props: {
    newHotObj: Object,
    hotColumns: Array
  },
  watch: {
    hotColumns: {
      handler(newVal, oldVal) {
        if (newVal.length > 0) {
          this.newGoodLessons = [newVal[1], newVal[2]]
          this.newGoodLessonsFrist = newVal[0]
          this.newGoodLessons.map(item => {
            if (item.name) {
              if (item.name.length > 11) {
                item.name = item.name.substring(0, 9) + '...'
              }
            }
          })
        }
      },
      // immediate: true,
      deep: true // 深度监听
    },
    newHotObj: {
      //深度监听，可监听到对象、数组的变化
      handler(newV, oldV) {
        // do something, 可使用this
        if (newV) {
          let arrIndex
          for (var a in newV) {
            newV[a].map(item => {
              if (item.roundup) {
                if (item.roundup.length > 100) {
                  item.roundup = item.roundup.substring(0, 100) + '...'
                }
              }
            })
            switch (a) {
              case 'hot_news':
                arrIndex = 0
                break
              case 'architectural_frontier':
                arrIndex = 1
                break
              case 'qualification_hotspot':
                arrIndex = 2
                break
              default:
                break
            }
            // 新闻热点
            let newArr = newV[a].slice(0)
            if (newV[a].length > 2) {
              this.newsList[arrIndex] = newArr
              this.headLinesList[arrIndex] = newV[a].slice(0, 2)
              this.newsList[arrIndex].splice(0, 2)
            } else {
              this.headLinesList[arrIndex] = newV[a]
              this.newsList[arrIndex] = []
            }
          }
        }
      },
      deep: true
      // immediate:true,
    }
  },
  computed: {},
  methods: {
    // 更多资讯
    gotoMoreNews(val) {
      let routeUrl
      if (val == 'hot') {
        routeUrl = this.$router.resolve({ path: 'hotmessage', query: { indexs: this.newActiveIndex } })
      }
      window.open(routeUrl.href, '_blank')
    },
    gototab(val) {
      let routeUrl = this.$router.resolve(`lectureRoom?activeTab=${val}`)
      window.open(routeUrl.href, '_blank')
    }
  },
  mounted() {}
}
</script>
