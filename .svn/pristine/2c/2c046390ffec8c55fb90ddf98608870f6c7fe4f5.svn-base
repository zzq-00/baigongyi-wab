<template>
  <div class='myLive'>
    <div class="tabChange clearfix">
      <span v-for="(item,index) in tabsColumn" :key="index" @click="nowIndex = index" :class="{active:index==nowIndex}">{{item}}
      </span>
    </div>
    <ul class="classList">
      <li class="line" v-for="(item,index) in dataList.records" :key="index" @click="goDetails(item)">
        <div class="classPic"><img :src="item.homeImage" alt=""></div>
        <div class="classInfo">
          <span class="font-14">{{item.name}}</span>
          <div class="price ">
            <i :class="item.price > 0 ? 'red' : 'green'">{{item.price>0 ? '￥'+item.price : '免费' }}</i>
            <div>
              <span class="font-12 update">{{item.type===1? '音频': '视频'}}</span>
               <span class="font-12 update" style='background:#E1FEEF;color:#2FC479;margin-left:5px;'>{{item.status===1? '已发布': '已删除'}}</span> 
            </div>
          </div>
        </div>
        <div class="otherInfo">
          <!-- <div class="photoInfo">
              <img :src="item.avatar" class="photo">
              <span class="font-12">{{item.realName}}</span>
            </div> -->
          <div class="time">{{item.publishTime}}</div>
        </div>
      </li>
    </ul>
    <!-- 分页 -->
    <div class="pagination">
      <el-pagination @current-change="handleCurrentChange" :current-page.sync="dataList.current " :page-size.sync="dataList.size" layout="prev,slot, next, total" :total="dataList.total">
        <slot>
          <span>第
            <i>{{dataList.current}}/{{dataList.pages}}</i>页</span>
        </slot>
      </el-pagination>
    </div>
  </div>
</template>

<script>
import api from '@/fetch'
export default {
  data() {
    return {
      nowIndex: 0, // tab栏切换
      tabsColumn: ['直播回放'],
      dialogVisible: false, // 创建课程弹框
      // currentPath: this.$route.path,
      dataList: {},
      params: {
        "pageNum": 1,
        "pageSize": 6
      }
    }
  },
  mounted() {
    this.getDataFn();
  },
  methods: {
    getDataFn() {
      api.liveHomeList(this.params).then(res => {
        if (res.code === 200) {
          this.dataList = res.data
        }
      })
        .catch(err => {
          console.log(err)
        })
    },
    // 翻页
    handleCurrentChange(val) {
      this.params.pageNum = val;
      this.getDataFn();
    },
    goDetails(data) {
      console.log(data, 'nnn');
      this.$router.push('/livetv/' + data.id)
    }
  }
}
</script>
