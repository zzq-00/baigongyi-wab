<template>
  <div>
    <el-carousel height="336px" class="self-carousel" arrow="never" :interval="8000">
      <el-carousel-item v-for="(item,index) in swiperImg" :key="index">
        <a :href="item.url" target="_blank">
          <img :src="item.img" alt="" height="100%" width="100%">
        </a>
      </el-carousel-item>
    </el-carousel>
  </div>
</template>

<script>
import api from '@/fetch'
export default {
  props: {
    tasList: Array
  },
  data() {
    return {
      swiperImg: [
        { img: require('@/assets/images/index-banner1.png'), url: '/community' },
        { img: require('@/assets/images/index-banner2.png'), url: '/engineering' },
        { img: require('@/assets/images/index-banner3.png'), url: '/lectureRoom' }
      ]
    }
  },
  watch: {
    tasList: {
      handler(val, oldVal) {
        if (val) {
          let newtasList = val.filter(item => !item.parentId)
          this.swiperImg[0].url = `/community?id=${newtasList[0].id}`
        }
      },
      deep: true
    }
  },
  methods: {
    getAllImg() {
      api.getAllImg().then(res => {
        this.swiperImg = res.dataList
      })
    }
  },
  mounted() {
    // this.getAllImg()
  }
}
</script>

