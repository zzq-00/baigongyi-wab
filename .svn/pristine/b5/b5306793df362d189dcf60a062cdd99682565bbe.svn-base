import Vue from 'vue'
import Vuex from 'vuex'
import { setItem, getItem } from '@/store/storage'

Vue.use(Vuex)

export default new Vuex.Store({
  state: {
    user: getItem('user'),
    courseDetail: {},
    columnDetail: {},
    tabActive: -1,
    commentNum:0,//评论数量
  },
  mutations: {
    setUser (state, userData) {
      state.user = userData
      // 存放到本地
      setItem('user', state.user)
    },
    setTab (state, val) {
      state.tabActive = val
      console.log(val, 'valss')
    },
    previewCourse (state, previewCourse) {
      state.courseDetail = previewCourse
    },
    previewColumn (state, previewColumn) {
      state.columnDetail = previewColumn
    },
    getCommentNum(state, num) {
      state.commentNum = num
      console.log(state,num,'num');
    },
  },
  actions: {
  },
  modules: {
  }
})
