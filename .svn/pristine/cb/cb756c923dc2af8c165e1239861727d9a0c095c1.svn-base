<script>
import commentCom from '@/components/commentCom'
import store from '@/store'
import api from '@/fetch'
import videoPlayer from '@/components/videoPlayer'//视频插件
export default {
    components: {
        commentCom,
        videoPlayer
    },
    data() {
        return {
            tabsName: ['介绍', '评论'],
            nowIndex: 0,
            commentTotal: 0, // 评论总数
            num:5,
            dialogVisible: false, // 购买弹框
            // 收藏
            collectParams: {
                objId: this.$route.params.id,
                objType: 0
            },
            liveTvDetails: {},
            videoVal: {
                url: '',
                dialogTableVisible: false
            }
        }
    },
    created() {
        this.getDetailsFn();
    },
    methods: {
        getDetailsFn() {
            api.liveHomeId(this.$route.params.id).then(res => {
                if (res.code === 200) {
                    this.liveTvDetails = res.data;
                }
            })
                .catch(err => {
                    console.log(err)
                })
        },
        //立即播放
        livePlayFn() {
            api.livePlay(this.$route.params.id).then(res => {
                if (res.code === 200) {
                    this.videoVal.dialogTableVisible = true;
                    this.videoVal.val = res.data;
                }
            })
                .catch(err => {
                    console.log(err)
                })
        },
        // 收藏，取消收藏
        async collect() {
            // 已登录--课程是否收藏
            if (store.state.user) {
                if (this.liveTvDetails.whetherToCollect) {
                    const res = await api.cancelCollect(this.collectParams)
                    console.log(res)
                    this.liveTvDetails.whetherToCollect = false
                } else {
                    const res = await api.addCollect(this.collectParams)
                    console.log(res)
                    this.liveTvDetails.whetherToCollect = true
                }
            } else {
                this.$alert('请登录后再收藏', {
                    confirmButtonText: '去登录',
                    callback: () => {
                        this.$router.push('/login')
                    }
                })
            }
        },
        // 标签切换
        toggleTabs(index) {
            this.nowIndex = index
        },
        getTotal(val) {
            this.commentTotal = val
        },
        toTeacherHome(teacherId) {
            this.$router.push('/teacherHome/' + teacherId)
        }
    }
}
</script>

