<script>
import commentCom from '@/components/commentCom'
import store from '@/store'
import api from '@/fetch'
import videoPlayer from '@/components/videoPlayer'// 视频插件
export default {
  name: 'ColumnDetail',
  props: {
    columnDetail: Object
  },
  components: {
    commentCom,
    videoPlayer
  },
  data () {
    return {
      tabsName: ['专栏介绍', '课程目录', '评论'],
      nowIndex: 0,
      commentTotal: 0, // 评论总数
      dialogVisible: false,
      // 收藏
      collectParams: {
        objId: this.$route.params.id,
        objType: 2 // 专栏
      },
      videoVal: {
        url: '',
        dialogTableVisible: false
      }
    }
  },
  methods: {
    // 立即学习
    goPlayFn () {
      this.videoVal.dialogTableVisible = true
      // 如果播放视频的路径不对 请更换哦
      this.videoVal.url = this.columnDetail && this.columnDetail.url
    },
    // 标签切换
    toggleTabs (index) {
      this.nowIndex = index
    },
    // 评论总数
    getTotal (val) {
      this.commentTotal = val
    },
    // 收藏，取消收藏
    async collect () {
      // 已登录--课程是否收藏
      if (store.state.user) {
        if (this.columnDetail.hasCollected) {
          console.log('取消收藏')
          const res = await api.cancelCollect(this.collectParams)
          console.log(res)
          this.columnDetail.hasCollected = false
        } else {
          console.log('收藏')
          const res = await api.addCollect(this.collectParams)
          console.log(res)
          this.columnDetail.hasCollected = true
        }
      } else {
        this.$alert('请登录后再收藏', {
          confirmButtonText: '去登录',
          callback: () => {
            this.$router.push('/login')
          }
        })
      }
    },

    toTeacherHome (TeacherId) {
      this.$router.push('/teacherHome/' + TeacherId)
    }
  }
}
</script>

