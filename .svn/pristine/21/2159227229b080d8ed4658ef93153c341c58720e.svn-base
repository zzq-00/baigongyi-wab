  .courseRoom {
      width: 1100px;
      overflow: hidden;
      li:nth-child(4n){
      margin-right:0;
    }
    .tabChange {
      cursor: pointer;
      font-size: 16px;
      margin: 20px 20px 26px 0;
      span:first-child {
        margin-right: 20px;
      }
      .active{
        position: relative;
        color: #e43c31;
      }
      .active::after{
        content: "";
        display: inline-block;
        position: absolute;
        bottom:-10px;
        left: 5px;
        height: 3px;
        width:24px;
        background-color: #e43c31;
      }
    }
  }
</style>
